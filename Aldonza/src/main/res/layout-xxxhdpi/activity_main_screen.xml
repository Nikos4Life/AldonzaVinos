<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:alwaysDrawnWithCache="false"
    android:background="@drawable/mainbackground"
    android:visibility="visible"
    tools:context=".MainScreenActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:id="@+id/linearLayout5">

        <Button
            android:id="@+id/button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="62dp"
            android:background="@drawable/twitter"
            android:onClick="twitter" />

        <Button
            android:id="@+id/button2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="62dp"
            android:background="@drawable/facebook"
            android:onClick="facebook" />

        <Button
            android:id="@+id/button3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="62dp"
            android:background="@drawable/youtube"
            android:onClick="youtube" />
    </LinearLayout>

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_marginRight="86dp"
        android:layout_marginTop="104dp"
        android:layout_marginLeft="06dp"
        android:layout_alignParentStart="false"
        android:layout_marginBottom="108.5dp"
        android:visibility="visible"
        android:id="@+id/gridLayout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="29.5dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="top"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/aldonza"
                android:tag="textviewAldonza"
                android:id="@+id/textViewAldonza"
                android:clickable="true"
                android:onClick="pulsar"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="left"
                android:layout_marginLeft="03dp"
                android:textAllCaps="false"
                android:textSize="15dp"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="top">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/vinedos"
                android:id="@+id/textViewVinedos"
                android:clickable="true"
                android:onClick="pulsar"
                android:layout_column="0"
                android:layout_gravity="center|left|top"
                android:layout_marginLeft="03dp"
                android:textAllCaps="false"
                android:gravity="center_vertical"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="29dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="top">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/Labodega"
                android:id="@+id/textViewBodega"
                android:clickable="true"
                android:onClick="pulsar"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="center|left|top"
                android:layout_marginLeft="03dp"
                android:textAllCaps="false"
                android:textSize="15dp"
                android:gravity="center_vertical"
                android:layout_marginTop="-0.5dp" />


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="29.5dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_gravity="top">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/Nuestrosvinos"
                android:id="@+id/textViewNVinos"
                android:clickable="true"
                android:onClick="pulsar"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="left"
                android:layout_marginLeft="03dp"
                android:textAllCaps="false"
                android:textSize="17dp"
                android:layout_marginTop="-0.5dp"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="29.1dp"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_gravity="top"
            android:layout_marginTop="-0.5dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/Aldonzaplaces"
                android:id="@+id/textViewAPlaces"
                android:clickable="true"
                android:onClick="pulsar"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="center|top"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="03dp"
                android:textAllCaps="false"
                android:textSize="17dp"
                android:gravity="center_vertical" />

        </LinearLayout>

    </GridLayout>
</RelativeLayout>