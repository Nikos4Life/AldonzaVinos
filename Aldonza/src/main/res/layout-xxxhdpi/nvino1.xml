<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/bot_navamarin"
        android:layout_alignParentTop="true"
        android:layout_marginTop="2dp" />

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imageView2">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/linearLayout1"
            android:layout_toRightOf="@+id/imageView2"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewTipoVino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="TIPO DE VINO:"
                android:textColor="#e03f4b"
                android:layout_marginLeft="5dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Tinto Barrica."
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="2dp" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/linea" />

            <TextView
                android:id="@+id/textViewTUva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="TIPO DE UVA:"
                android:textColor="#e03f4b"
                android:layout_marginLeft="5dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Cabernet Sauvignon, Merlot, Syrah, Tempranillo."
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="2dp" />

            <ImageView
                android:id="@+id/ImageView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/linea" />

            <TextView
                android:id="@+id/textViewPresen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="PRESENTACIÓN:"
                android:textColor="#e03f4b"
                android:layout_marginLeft="5dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Botella troncocónica de 75 cl.En estuche individual de cartón."
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="2dp" />

            <ImageView
                android:id="@+id/ImageView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/linea" />

            <TextView
                android:id="@+id/textViewGrad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="GRADUACIÓN:"
                android:textColor="#e03f4b"
                android:layout_marginLeft="5dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="14% Vol."
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="2dp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/linea" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="ELABORACIÓN:"
                android:textColor="#e03f4b"
                android:layout_marginLeft="5dp" />

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="wrap_content"
                android:layout_height="97dp"
                android:layout_weight="0.03"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="2dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Elaborado a partir de nuestra mejor selección de uvas procedente de cepas de escasa producción y recolectadas durante la noche en su momento óptimo de maduración. El coupage se realiza avanzada la crianza para un mejor ensamblaje. Fermentación controlada a una temperatura de entre 25º a 28º C. Crianza de 13 meses en barrica nueva de roble americano y francés. Reposo en botella en la tranquilidad y sosiego de nuestra cava." />
            </ScrollView>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/linea" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="SERVICIO:"
                android:textColor="#e03f4b"
                android:layout_marginLeft="5dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Entre 16 - 18º C."
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="2dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/linea" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="GASTRONOMÍA:"
                android:textColor="#e03f4b"
                android:layout_marginLeft="5dp" />

            <ScrollView
                android:id="@+id/scrollView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="2dp">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="Buen maridaje con carnes, guisos, caza y quesos." />
            </ScrollView>

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/linea" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="PRODUCCIÓN:"
                android:textColor="#e03f4b"
                android:layout_marginLeft="5dp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Limitada, 15.000 botellas."
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="2dp" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/linea" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="CATA:"
                android:textColor="#e03f4b"
                android:layout_marginLeft="5dp" />

            <ScrollView
                android:id="@+id/scrollView3"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="2dp">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Color rojo intenso, de capa alta con ribetes amoratados, limpio, brillante y glicérido. Aromas tostados, cacao, fruta roja madura y especiados, de intensidad profunda que se abre paulatinamente con nuevos matices. En boca destaca un perfecto ensamblaje entre la madera, el cacao tostado y la vainilla con los frutos."
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </ScrollView>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>