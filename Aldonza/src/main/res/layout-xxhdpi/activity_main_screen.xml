<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:alwaysDrawnWithCache="false"
    android:background="@drawable/mainbackground"
    android:visibility="visible"
    tools:context=".MainScreenActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:id="@+id/linearLayout5">

        <Button
            android:id="@+id/button"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/twitter"
            android:onClick="twitter" />

        <Button
            android:id="@+id/button2"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/facebook"
            android:onClick="facebook" />

        <Button
            android:id="@+id/button3"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/youtube"
            android:onClick="youtube" />

    </LinearLayout>

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_marginRight="120dp"
        android:layout_marginTop="151dp"
        android:layout_marginLeft="09dp"
        android:layout_alignParentStart="false"
        android:layout_marginBottom="157dp"
        android:visibility="visible"
        android:id="@+id/gridLayout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="42dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="top"
            android:visibility="visible"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="-1dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/aldonza"
                android:tag="textviewAldonza"
                android:id="@+id/textViewAldonza"
                android:clickable="true"
                android:onClick="pulsar"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="center|top"
                android:layout_marginLeft="03dp"
                android:textAllCaps="false"
                android:gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="43dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="top"
            android:id="@+id/linearLayout"
            android:visibility="visible">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/vinedos"
                android:id="@+id/textViewVinedos"
                android:clickable="true"
                android:onClick="pulsar"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="center|top"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="03dp"
                android:textAllCaps="false"
                android:gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="41.5dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="top"
            android:id="@+id/linearLayout2"
            android:visibility="visible">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/Labodega"
                android:id="@+id/textViewBodega"
                android:clickable="true"
                android:onClick="pulsar"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="center|top"
                android:layout_marginLeft="05dp"
                android:textAllCaps="false"
                android:gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="42.5dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="top"
            android:id="@+id/linearLayout3"
            android:visibility="visible">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/Nuestrosvinos"
                android:id="@+id/textViewNVinos"
                android:clickable="true"
                android:onClick="pulsar"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="center|top"
                android:layout_marginLeft="03dp"
                android:textAllCaps="false"
                android:gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="42dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_gravity="top"
            android:id="@+id/linearLayout4"
            android:visibility="visible">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/Aldonzaplaces"
                android:id="@+id/textViewAPlaces"
                android:clickable="true"
                android:onClick="pulsar"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="center|top"
                android:layout_marginLeft="03dp"
                android:textAllCaps="false"
                android:gravity="center_vertical" />
        </LinearLayout>

    </GridLayout>

</RelativeLayout>